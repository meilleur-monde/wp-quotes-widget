<div class="better_world_quotes_widget">
    <div class="row">
        <label for="{{ title.id }}">{{ title.label }}</label>
        <input class="widefat" id="{{ title.id }}" name="{{ title.name }}" type="text" value="{{ title.value | escape }}">
    </div>

    <div class="row">
        <input type="checkbox" id="{{ show_author.id }}" name="{{ show_author.name }}"  {% if show_author.value %}checked="checked"{% endif %}" />
        <label for="{{ show_author.id }}">{{ show_author.label }}</label>
    </div>

    <div class="row">
        <input type="checkbox" id="{{ show_source.id }}" name="{{ show_source.name }}"  {% if show_source.value %}checked="checked"{% endif %}" />
        <label for="{{ show_source.id }}">{{ show_source.label }}</label>
    </div>

    <div class="row">
        <input type="checkbox" id="{{ ajax_refresh.id }}" name="{{ ajax_refresh.name }}"  {% if ajax_refresh.value %}checked="checked"{% endif %}" />
        <label for="{{ ajax_refresh.id }}">{{ ajax_refresh.label }}</label>
    </div>

    <div class="row">
        <input type="checkbox" id="{{ auto_refresh.id }}" name="{{ auto_refresh.name }}"  {% if auto_refresh.value %}checked="checked"{% endif %}" />
        <label for="{{ auto_refresh.id }}">{{ auto_refresh.label }}</label>
        <br/><span class="setting-description">{{ auto_refresh.description }}</span>
    </div>
    <div class="row">
        <input type="checkbox" id="{{ random_refresh.id }}" name="{{ random_refresh.name }}"  {% if random_refresh.value %}checked="checked"{% endif %}" />
        <label for="{{ random_refresh.id }}">{{ random_refresh.label }}</label>
        <br/><span class="setting-description">{{ random_refresh.description }}</span>
    </div>

    <div class="row">
        <label for="{{ refresh_interval.id }}">{{ refresh_interval.label }}</label>
        <input
                class="widefat" id="{{ refresh_interval.id }}" name="{{ refresh_interval.name }}"
               type="number" value="{{ refresh_interval.value | escape }}"
               min="{{ refresh_interval.min | escape }}" max="{{ refresh_interval.max | escape }}" step="{{ refresh_interval.step | escape }}"
               style="width:5em;"
        >
        {% if errors.refresh_interval_error_msg is not empty %}<p class="widget-error">{{ errors.refresh_interval_error_msg }} : '{{ errors.refresh_interval_error_value | escape }}'</p>{% endif %}
    </div>

    <div class="row">
        <label for="{{ tags.id }}">{{ tags.label }}</label>
        <input class="widefat betterworld_tagsSelector" id="{{ tags.id }}" name="{{ tags.name }}" type="text" value="{{ tags.value | escape }}">
        {% if errors.tags_error_msg is not empty %}<p class="widget-error">{{ errors.tags_error_msg }} : '{{ errors.tags_error_value | escape }}'</p>{% endif %}
    </div>

    <div class="row">
        <label for="{{ char_limit.id }}">{{ char_limit.label }}</label>
        <input
                class="widefat" id="{{ char_limit.id }}" name="{{ char_limit.name }}"
                type="number" value="{{ char_limit.value | escape }}"
                min="{{ char_limit.min | escape }}" max="{{ char_limit.max | escape }}" step="{{ char_limit.step | escape }}"
                style="width:5em;"
        >
        {% if errors.char_limit_error_msg is not empty %}<p class="widget-error">{{ errors.char_limit_error_msg }} : '{{ errors.char_limit_error_value | escape }}'</p>{% endif %}
    </div>
</div>