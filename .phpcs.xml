<?xml version="1.0"?>
<ruleset>
    <arg name="extensions" value="php"/>
    <arg value="s"/>
    <file>./src</file>
    <rule ref="WordPress-Extra">
        <!-- removes error like
            The $domain arg must be a single string literal, not
                 "self::PLUGIN_DOMAIN". (WordPress.WP.I18n.NonSingularStringLiteralDomain)
        -->
        <exclude name="WordPress.WP.I18n.NonSingularStringLiteralDomain" />
    </rule>

    <arg name="colors"/>
    <arg value="spvn"/>
</ruleset>